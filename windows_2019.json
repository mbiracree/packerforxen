{
  "builders": [
    {
      "boot_wait": "2m",
      "communicator": "winrm",
      "vcpus_max": 2,
      "disk_size": "{{user `disk_size`}}",
      "floppy_files": [
        "{{user `autounattend`}}",
        "./scripts/DisableFirewall.ps1",
        "./scripts/xentools.bat",
        "./scripts/disable-network-discovery.cmd",
        "./scripts/disable-winrm.ps1",
        "./scripts/enable-winrm.ps1",
        "./scripts/microsoft-updates.bat",
        "./scripts/win-updates.ps1",
        "./scripts/unattend.xml",
        "./scripts/cd.ps1",
        "./scripts/sysprep.bat"
      ],
      "guest_additions_mode": "upload",
      "guest_os_type": "Windows2019_64",
      "clone_template": "Windows Server 2019 (64-bit)",
      "headless": "{{user `headless`}}",
      "iso_checksum": "a4b524207cf532e48c9a57ad2ef1a9f4",
      "iso_checksum_type": "none",
      "iso_url": "file://c:/iso/Server2019.iso",
      "vm_memory": 4096,
      "shutdown_command": "a:/sysprep.bat",
      "type": "xenserver-iso",
      "ssh_username": "it",
      "vm_name": "WindowsServer2019",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_use_ssl": false,
      "winrm_insecure": true,
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "remote_host": "192.168.100.108",
      "remote_username": "root",
      "remote_password": "pchp1admin",
      "sr_name": "Local storage",
      "network_name": "Network 0",
      "sr_iso_name": "DC4-ISO",
      "keep_vm": "always"
    }
  ],
  "post-processors": [
    {
      "keep_input_artifact": true,
      "output": "windows_2019_{{.Provider}}.box",
      "type": "vagrant",
      "vagrantfile_template": "vagrantfile-windows_2019.template.erb"
    }
  ],
  "provisioners": [
    {
      "execute_command": "{{ .Vars }} cmd /c \"{{ .Path }}\"",
      "scripts": [
        "./scripts/enable-rdp.bat"
      ],
      "type": "windows-shell"
    },
    {
      "restart_timeout": "{{user `restart_timeout`}}",
      "type": "windows-restart"
    }
   
  ],
  "variables": {
    "autounattend": "./answer_files/Autounattend.xml",
    "disk_size": "61440",
    "disk_type_id": "1",
    "headless": "false",
     "iso_checksum": "a4b524207cf532e48c9a57ad2ef1a9f4",
     "iso_url": "file://c:/iso/Server2019.iso",
    "restart_timeout": "20m",
    "winrm_timeout": "1h"
  }
}

